{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "jsx": "react-jsx",
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "*.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
