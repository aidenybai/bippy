{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxlint/configuration_schema.json",
  "rules": {
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "no-var": "error",
    "eqeqeq": "warn",
    "no-console": "off"
  },
  "ignorePatterns": [
    "node_modules",
    "dist",
    ".next",
    "coverage",
    "pnpm-lock.yaml"
  ]
}
